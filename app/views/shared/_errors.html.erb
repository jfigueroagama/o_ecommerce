<% if object.errors.any? %>
    <div id="error_explanation">
        <h5 class="card-titla">
            <%= pluralize(object.errors.count, "error")%>
            prohibited this <%= object.class.name.humanize.downcase %> to being saved.
        </h5>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>